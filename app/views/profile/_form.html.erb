

<div class="sign_in">
    
    <div class="form-horizontal">
      <%= form_for profile do |f| %>
    <div class="form-group">
          <%= f.label :name, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", id: "inputEmail3", placeholder: "Enter your name" %>
          </div>
    </div>

    <div class="form-group">
          <%= f.label :photo, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.file_field :photo, class: "form-control", id: "inputEmail3" %>
          </div>
    </div>

    <div class="form-group">
          <%= f.label :city, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :city, class: "form-control", id: "inputEmail3", placeholder: "City" %>
          </div>
    </div>

    <div class="form-group">
          <%= f.label :inspirations, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :inspirations, class: "form-control", id: "inputEmail3", placeholder: "Tell us what/who inspires you!" %>
          </div>
    </div>

    <div class="form-group">
          <%= f.label :instruments, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :instruments, class: "form-control", id: "inputEmail3", placeholder: "Do you play any instruments?" %>
          </div>
    </div>

    <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'submit', class: "btn btn-default" %>
          </div>
    </div>

<% end %>
</div>



