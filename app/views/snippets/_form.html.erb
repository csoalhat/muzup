
<div class="sign_in">

  <div class="form-horizontal">
    <%= form_for @snippet, html: {multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :title, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control", id: "inputEmail3", placeholder: "Keyword" %>
          </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :description, class: "form-control", id: "inputEmail3", placeholder: "Description" %>
          </div>
  </div>


  <div class="form-group">
    <%= f.label :song_file, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= file_field_tag "song[file]", class: "form-control", id: "inputEmail3", placeholder: "Audio Title" %>
          </div>
  </div>

  <div class="form-group">
          <%= f.label :pic, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.file_field :pic, class: "form-control", id: "inputEmail3" %>
          </div>
    </div>

    <div class="form-group">
    <%= f.label :link, class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :link, class: "form-control", id: "inputEmail3", placeholder: "Paste your link" %>
          </div>
  </div>

  <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'submit', class: "btn btn-default" %>
          </div>
    </div>
<% end %>
</div>